---
import { Button } from "@/shadcn/components/ui/button";
import Layout from "@/layouts/Layout.astro";
---

<Layout
    title="404"
    description="Oops! The page you're looking for doesn't exist. Return to the homepage and explore my work and services as a Full Stack Web Developer."
    keywords="404, Page Not Found, Error Page, Full Stack Web Developer, Al Abed Jafry, Web Developer, Website Navigation"
>
    <div class="mx-auto text-center py-12">
        <h3 class="text-2xl" role="alert">
            The page you're looking for couldn't be found.
        </h3>
        <a href="/" aria-label="Return to Home Page">
            <Button className="mt-4">Home</Button>
        </a>
    </div>
</Layout>
