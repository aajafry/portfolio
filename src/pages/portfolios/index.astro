---
import PortfolioLists from "@/components/PortfolioLists.astro";
import SectionHeading from "@/components/SectionHeading.astro";
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";

const portfolios = await getCollection("portfolios");
---

<Layout
    title="Portfolios"
    description="Explore the portfolios of Al Abed Jafry, showcasing a collection of innovative and creative web development projects that highlight skills and expertise."
    keywords="portfolios, web development, full stack web developer, Al Abed Jafry, creative projects, web design, development showcase"
>
    <SectionHeading
        Heading="Portfolios"
        SubHeading="A Glimpse of My Creative Journey"
    />
    <PortfolioLists portfolios={portfolios} />
</Layout>
