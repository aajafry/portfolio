---
import BlogLists from "@/components/BlogLists.astro";
import SectionHeading from "@/components/SectionHeading.astro";
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";

const blogs = await getCollection("blogs");
---

<Layout
    title="Blogs"
    description="Read the latest blogs by Al Abed Jafry, a full stack web developer, sharing insights on web development, system design, programming, and technology trends."
    keywords="blogs, web development, full stack development, Al Abed Jafry, technology insights, programming, system design, web development tips"
>
    <SectionHeading Heading="Blogs" SubHeading="Thoughts and Insights" />
    <BlogLists blogs={blogs} />
</Layout>
